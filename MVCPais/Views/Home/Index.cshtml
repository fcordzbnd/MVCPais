                @Html.DisplayNameFor(model => model.paisdesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idpais)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idpais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paisdesc)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.idpais  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.idpais  }) |
